<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="printToLower" class="edu.school21.PreProcessorToLowerImpl">
    </bean>
<!--    <bean id="printToUpper" class="edu.school21.PreProcessorToUpperImpl">-->
<!--    </bean>-->

<!--    <bean id="renderErr" class="edu.school21.RendererErrImpl">-->
<!--        <constructor-arg index="0" ref="printToUpper"/>-->
<!--    </bean>-->

<!--    <bean id="renderStandart" class="edu.school21.RendererStandardImpl">-->
<!--        <constructor-arg index="0" ref="printToUpper"/>-->
<!--    </bean>-->

    <bean id="renderErr" class="edu.school21.RendererErrImpl">
        <constructor-arg index="0" ref="printToLower"/>
    </bean>

    <bean id="renderStandart" class="edu.school21.RendererStandardImpl">
        <constructor-arg index="0" ref="printToLower"/>
    </bean>

    <bean id="printWithDate" class="edu.school21.PrinterWithDateTimeImpl">
        <constructor-arg index="0" ref="renderErr"/>
    </bean>

    <bean id="printWithPrefix" class="edu.school21.PrinterWithPrefixImpl">
        <constructor-arg index="0" ref="renderErr"/>
        <property name="prefix" value="Prefix"/>
    </bean>
</beans>